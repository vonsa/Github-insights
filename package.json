{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "concurrently \"rollup -c -w\" \"npm run graphql:types:dev\"",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "graphql:types": "npx apollo client:codegen src/GraphQL/types/ --localSchemaFile=schemas/github-api-schema.graphql --includes=src/GraphQL/Queries/** --target=typescript --tagName=gql --outputFlat",
    "graphql:types:dev": "npx apollo client:codegen src/GraphQL/types/ --localSchemaFile=schemas/github-api-schema.graphql --includes=src/GraphQL/Queries/** --target=typescript --tagName=gql --outputFlat --watch"
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --max-warnings 0 --ext ts,tsx --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.js": [
      "eslint --max-warnings 0 --ext js --no-ignore"
    ],
    "*.svelte": [
      "svelte-check --fail-on-warnings --fail-on-hints",
      "prettier --check --loglevel=warn 'src/**/*.svelte'"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/animejs": "^3.1.4",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-svelte-svg": "^1.0.0-beta.3",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.35.2",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "ts-jest": "^27.0.3",
    "tslib": "^2.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "animejs": "^3.2.1",
    "axios": "^0.21.1",
    "bourbon": "^7.0.0",
    "concurrently": "^6.2.1",
    "date-fns": "^2.22.1",
    "glob": "^7.1.7",
    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "rxjs": "^7.1.0",
    "sirv-cli": "^1.0.0",
    "svelte-apollo": "^0.4.0",
    "svelte-spa-router": "^3.2.0",
    "xstate": "^4.20.2"
  }
}
